<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/random_back"
    android:layout_height="match_parent">

    <LinearLayout android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:text="长格数:    "
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText android:id="@+id/random_long"
        android:layout_width="400dp"
        android:maxLines="1"
        android:text="12"
        android:hint="请输入迷宫长格数"
        android:layout_height="60dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:text="宽格数:    "
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText android:id="@+id/random_width"
        android:layout_width="400dp"
        android:maxLines="1"
        android:text="12"
        android:hint="请输入迷宫宽格数"
        android:layout_height="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:text="光滑度:    "
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText android:id="@+id/random_rub"
        android:layout_width="400dp"
        android:maxLines="1"
        android:text="10"
        android:hint="请输入光滑度，越大越光滑"
        android:layout_height="60dp"/>
    </LinearLayout>
    <TextView android:id="@+id/random_show_error"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>
    <Button android:id="@+id/random_sure"
        android:text="确认"
        android:textSize="20dp"
        android:background="#00ff00"
        android:layout_width="200dp"
        android:layout_height="60dp"/>
</LinearLayout>