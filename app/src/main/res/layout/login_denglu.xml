<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="@drawable/login_title"
    android:id="@+id/logindenglu"
    android:visibility="invisible"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/login_close"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:background="@drawable/login_close" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
         <LinearLayout android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/denglu"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText android:id="@+id/login_name"
            android:hint="请输入用户名"
            android:maxLines="1"
            android:layout_width="400dp"
            android:layout_height="60dp"/>

        <EditText android:id="@+id/login_pass"
            android:hint="请输入密码"
            android:maxLines="1"
            android:inputType="textPassword"
            android:layout_width="400dp"
            android:layout_height="60dp"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox android:id="@+id/login_remeber"
                android:text="记住密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView  android:id="@+id/login_find_pass"
                android:text="找回密码"
                android:gravity="center"
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>
        </LinearLayout>

        <LinearLayout android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button android:id="@+id/login_in"
                android:text="登陆"
                android:background="#99ff00"
                android:textSize="20dp"
                android:layout_width="150dp"
                android:layout_height="50dp"/>

            <Button android:id="@+id/login_register"
                android:text="注册"
                android:background="#99ff00"
                android:textSize="20dp"
                android:layout_marginLeft="130dp"
                android:layout_width="150dp"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout android:id="@+id/register"
        android:gravity="center"
        android:visibility="invisible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText android:id="@+id/register_name"
            android:hint="请输入用户名"
            android:layout_width="400dp"
            android:maxLines="1"
            android:layout_height="60dp"/>
        <EditText android:id="@+id/register_pass"
            android:layout_width="400dp"
            android:maxLines="1"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:layout_height="60dp"/>
        <EditText android:id="@+id/register_repass"
            android:maxLines="1"
            android:hint="请重复输入密码"
            android:inputType="textPassword"
            android:layout_width="400dp"
            android:layout_height="60dp"/>

            <TextView android:id="@+id/register_cue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button android:id="@+id/register_sure"
            android:text="确认"
            android:background="#99ff00"
            android:layout_width="150dp"
            android:layout_height="70dp"/>
    </LinearLayout>
    </FrameLayout>
</LinearLayout>